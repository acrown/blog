<h2>Taggable Posts</h2>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.tag_list %></td>
    <td><%= link_to 'Show', post %></td>
    <% if can? :manage, :all %>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
</table>

<br>
<%= link_to 'Back to Posts', posts_path %>
<% if can? :manage, :all %>| <%= link_to 'New Post', new_post_path %><% end %>
<% end %>

